FROM debian:stable

LABEL version="2023"
LABEL description="Imagem Debian para servidores  e roteadores em INF534 (sshd, ftpd e nginx)"
LABEL maintainer="sidneypio@gmail.com"

RUN apt update \
    && apt upgrade -y\
    && apt install -y\
            apt-utils aptitude \
            procps \
            net-tools iptables \
            bind9-host dnsutils  \
            traceroute \
            iputils-ping \
            iputils-tracepath \
            htop \
            tcpdump \
            netcat telnet \
            links man \
            curl wget \
            nano vim \
            nmap \
            ftp \
            ethtool mtr \
            openssh-client \
            openssh-server \
            frr frr-doc \
            proftpd-basic \
            nginx \
    && apt autoremove -y \
    && apt clean

CMD /usr/local/bin/inicio.sh

